  <style>
    .page-header {
      background: var(--color-bg-surface);
      padding: var(--space-3xl) 0 var(--space-2xl);
      border-bottom: 1px solid var(--color-border-light);
    }

    .lead {
      font-size: var(--font-size-xl);
      color: var(--color-text-secondary);
    }

    .location-picker {
      padding: var(--space-2xl) 0;
      background: #fffbeb;
    }

    .location-picker h2 {
      margin-bottom: var(--space-lg);
      text-align: center;
    }

    .location-buttons {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-md);
      justify-content: center;
    }

    .location-btn {
      padding: var(--space-md) var(--space-xl);
      background: white;
      border: 2px solid var(--color-border);
      border-radius: var(--radius-md);
      text-decoration: none;
      color: var(--color-text);
      font-weight: 500;
      transition: all 0.2s ease;
    }

    .location-btn:hover {
      border-color: var(--color-text);
      background: var(--color-bg-surface);
    }

    .utilities-by-location {
      padding: var(--space-2xl) 0;
    }

    .location-card {
      background: var(--color-bg);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-md);
      padding: var(--space-xl);
      margin-bottom: var(--space-2xl);
      scroll-margin-top: 20px;
    }

    .location-card h2 {
      margin-bottom: var(--space-sm);
    }

    .location-note {
      color: var(--color-text-secondary);
      margin-bottom: var(--space-xl);
      padding: var(--space-md);
      background: var(--color-bg-surface);
      border-radius: var(--radius-sm);
    }

    .utility-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-lg);
    }

    .utility {
      padding: var(--space-lg);
      background: var(--color-bg-surface);
      border-radius: var(--radius-md);
      border-left: 4px solid var(--color-border);
    }

    .utility.electric { border-left-color: #facc15; }
    .utility.water { border-left-color: #3b82f6; }
    .utility.sewer { border-left-color: #8b5cf6; }
    .utility.gas { border-left-color: #f97316; }
    .utility.trash { border-left-color: #22c55e; }
    .utility.billing { border-left-color: #64748b; }

    .utility.municipal {
      background: #fef9c3;
      border-left-color: #ca8a04;
    }

    .utility h3 {
      margin-bottom: var(--space-sm);
    }

    .utility .provider {
      font-weight: 600;
      margin-bottom: var(--space-xs);
    }

    .utility .type {
      font-size: var(--font-size-sm);
      color: #ca8a04;
      font-weight: 500;
      margin-bottom: var(--space-sm);
    }

    .utility .source, .utility .note {
      font-size: var(--font-size-sm);
      color: var(--color-text-tertiary);
    }

    .utility .benefit {
      margin-top: var(--space-sm);
      font-size: var(--font-size-sm);
      color: #15803d;
    }

    .utility ul {
      font-size: var(--font-size-sm);
      padding-left: var(--space-lg);
      margin: var(--space-sm) 0;
    }

    .regional-contacts {
      padding: var(--space-2xl) 0;
      background: var(--color-bg-surface);
    }

    .regional-contacts h2 {
      margin-bottom: var(--space-xl);
    }

    .contact-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-xl);
    }

    .contact-card {
      background: var(--color-bg);
      padding: var(--space-lg);
      border-radius: var(--radius-md);
      border: 1px solid var(--color-border-light);
    }

    .contact-card h3 {
      margin-bottom: var(--space-sm);
    }

    .contact-card .warning {
      background: #fee2e2;
      color: #991b1b;
      padding: var(--space-sm);
      border-radius: var(--radius-sm);
      font-size: var(--font-size-sm);
      margin-top: var(--space-sm);
    }

    .new-residents-link {
      padding: var(--space-2xl) 0;
    }

    .new-residents-link .card {
      text-align: center;
      max-width: 500px;
      margin: 0 auto;
    }

    .new-residents-link h2 {
      margin-bottom: var(--space-md);
    }

    .new-residents-link p {
      margin-bottom: var(--space-lg);
      color: var(--color-text-secondary);
    }

    @media (prefers-color-scheme: dark) {
      .location-picker {
        background: rgba(251, 191, 36, 0.1);
      }

      .location-picker .card {
        background: var(--color-bg);
      }

      .location-btn {
        background: var(--color-bg);
        border-color: var(--color-border);
      }

      .location-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: var(--color-text-secondary);
      }

      .utility {
        background: rgba(255, 255, 255, 0.05);
      }

      .utility.municipal {
        background: rgba(250, 204, 21, 0.15);
        border-left-color: rgba(202, 138, 4, 0.8);
      }

      .utility .type {
        color: #fbbf24;
      }

      .utility .benefit {
        color: #86efac;
      }

      .contact-card {
        background: var(--color-bg);
      }

      .contact-card .warning {
        background: rgba(239, 68, 68, 0.2);
        color: #fca5a5;
      }

      .location-note {
        background: rgba(255, 255, 255, 0.05);
      }
    }

    @media (max-width: 600px) {
      .location-buttons {
        flex-direction: column;
      }

      .location-btn {
        text-align: center;
      }
    }
  </style>
</BaseLayout>
