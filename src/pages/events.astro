---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout title="Community Events | GraftonHub" description="Annual festivals, farmers markets, concerts, and seasonal events in southern Lorain County">
  <div class="page-header">
    <div class="container">
      <h1>üìÖ Community Events</h1>
      <p class="lead">Annual festivals, markets, concerts, and seasonal activities</p>
    </div>
  </div>

  <div class="container">

    <!-- Annual Festivals -->
    <section class="festivals">
      <h2>Annual Festivals & Celebrations</h2>

      <div class="event-cards">
        <div class="event-card">
          <h3>üé° Lorain County Fair</h3>
          <p class="when">August (2 weeks before Labor Day)</p>
          <p class="where">Wellington, OH</p>
          <p>Major county fair with grandstand shows, demolition derby, agricultural exhibits, carnival rides, food vendors, entertainment</p>
          <p><a href="https://www.loraincountyfair.com" target="_blank" rel="noopener">loraincountyfair.com</a></p>
        </div>

        <div class="event-card">
          <h3>üçÇ Grafton Fall Festival</h3>
          <p class="when">Early October</p>
          <p class="where">Willow Park, Grafton</p>
          <p>Family event with local vendors, food, activities. Hosted by LaGrange Engine Club.</p>
        </div>

        <div class="event-card">
          <h3>üé® Harvest of the Arts</h3>
          <p class="when">3rd Weekend of September</p>
          <p class="where">Downtown Wellington</p>
          <p>Juried craft fair featuring artisans, handmade goods, demonstrations</p>
        </div>

        <div class="event-card">
          <h3>üéÜ Grafton 4th of July</h3>
          <p class="when">July 4th</p>
          <p class="where">Willow Park, Grafton</p>
          <p>Parade, fireworks, live music, food trucks - major community celebration</p>
        </div>
      </div>
    </section>

    <!-- Farmers Markets -->
    <section class="markets">
      <h2>Farmers Markets</h2>

      <div class="market-card">
        <h3>ü•¨ Oberlin Farmers Market</h3>
        <p><strong>When:</strong> Saturdays, 9am-noon</p>
        <p><strong>Season:</strong> May 16 - October 10</p>
        <p><strong>Location:</strong> 69-85 S Main St (downtown Oberlin, across from post office)</p>
        <p><strong>What:</strong> Local produce, meats, baked goods, crafts, artisan products</p>
        <p><a href="https://oberlinfarmersmarket.info" target="_blank" rel="noopener">oberlinfarmersmarket.info</a> | <a href="https://www.facebook.com/oberlinfarmersmarket" target="_blank" rel="noopener">Facebook</a></p>
      </div>
    </section>

    <!-- Concerts & Entertainment -->
    <section class="concerts">
      <h2>Concert Series & Live Music</h2>

      <div class="event-cards">
        <div class="event-card">
          <h3>üéµ Rockin' on the River</h3>
          <p class="when">Summer Concert Series</p>
          <p class="where">Black River Landing, Lorain</p>
          <p>Outdoor concerts featuring national and regional acts. High attendance from across Lorain County.</p>
        </div>

        <div class="event-card">
          <h3>üé∏ Grafton Summer Concerts</h3>
          <p class="when">Summer Evenings</p>
          <p class="where">Willow Park, Grafton</p>
          <p>Free outdoor concerts at the pavilion. Check village website for schedule.</p>
          <p><a href="https://villageofgrafton.org/events/" target="_blank" rel="noopener">villageofgrafton.org/events</a></p>
        </div>
      </div>
    </section>

    <!-- Seasonal Events -->
    <section class="seasonal">
      <h2>Seasonal Events & Activities</h2>

      <div class="seasonal-grid">
        <div class="seasonal-card">
          <h3>üçÅ Winter/Spring</h3>
          <ul>
            <li><strong>Maple Sugaring</strong> (Feb-Mar)<br>
              Carlisle Reservation - Sugar shack demos, hikes<br>
              <span class="org">Lorain County Metro Parks</span></li>
            <li><strong>Hearts A Glow</strong> (mid-Feb)<br>
              Schoepfle Garden, Birmingham - Valentine's luminary walk<br>
              <span class="org">Metro Parks</span></li>
          </ul>
        </div>

        <div class="seasonal-card">
          <h3>‚òÄÔ∏è Summer</h3>
          <ul>
            <li><strong>Outdoor Pool</strong> (seasonal)<br>
              Splash Zone, Oberlin - Water park open noon-7:45pm<br>
              <span class="org">Metro Parks</span></li>
            <li><strong>Homeschool Explorers</strong> (monthly programs)<br>
              Various locations, ages 7-12<br>
              <span class="org">Metro Parks</span></li>
            <li><strong>Summer Camps</strong><br>
              Nature, outdoor adventure, boating<br>
              <span class="org">Metro Parks</span></li>
          </ul>
        </div>

        <div class="seasonal-card">
          <h3>üéÉ Fall</h3>
          <ul>
            <li><strong>Halloween Fair</strong><br>
              Carlisle Reservation<br>
              <span class="org">Metro Parks</span></li>
            <li><strong>Grafton Fall Festival</strong> (early Oct)<br>
              Willow Park, Grafton</li>
            <li><strong>Harvest of the Arts</strong> (3rd weekend Sept)<br>
              Wellington</li>
          </ul>
        </div>

        <div class="seasonal-card">
          <h3>üéÑ Winter Holidays</h3>
          <ul>
            <li><strong>Holiday Lights</strong><br>
              Carlisle Reservation - Drive-through & walk<br>
              <span class="org">Metro Parks</span></li>
            <li><strong>Ice Rink/Sledding</strong> (weather permitting)<br>
              LaGrange Community Park</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Event Calendars -->
    <section class="calendars">
      <h2>Where to Find Current Events</h2>
      <p class="intro">Event dates and details change. Here's where to find the most current information:</p>

      <div class="calendar-grid">
        <div class="calendar-card">
          <h3>County-Wide</h3>
          <ul>
            <li><a href="https://loraincountyohio.gov/583/Annual-Festivals-Events" target="_blank" rel="noopener">Lorain County Official Calendar</a></li>
            <li><a href="https://loraincounty.com/festivals/" target="_blank" rel="noopener">LoraincCounty.com Events</a></li>
            <li><a href="https://www.loraincountymetroparks.com/whats-happening" target="_blank" rel="noopener">Metro Parks Events</a></li>
          </ul>
        </div>

        <div class="calendar-card">
          <h3>Grafton</h3>
          <ul>
            <li><a href="https://villageofgrafton.org/events/" target="_blank" rel="noopener">Village of Grafton Events</a></li>
            <li>Village newsletters (sign up on website)</li>
          </ul>
        </div>

        <div class="calendar-card">
          <h3>Oberlin</h3>
          <ul>
            <li><a href="https://www.facebook.com/p/City-of-Oberlin-Recreation-Department-100069749992078/" target="_blank" rel="noopener">Oberlin Recreation Facebook</a></li>
            <li><a href="https://cityofoberlin.com/for-residents/news-updates/" target="_blank" rel="noopener">City News & Updates</a></li>
          </ul>
        </div>

        <div class="calendar-card">
          <h3>LaGrange</h3>
          <ul>
            <li><a href="https://villageoflagrangeohio.gov/news-events" target="_blank" rel="noopener">Village News & Events</a></li>
            <li><a href="https://www.facebook.com/lagrangecommunitypark" target="_blank" rel="noopener">Community Park Facebook</a></li>
          </ul>
        </div>
      </div>
    </section>

  </div>

  <style>
    .page-header {
      background: var(--color-bg-surface);
      padding: var(--space-3xl) 0 var(--space-2xl);
      border-bottom: 1px solid var(--color-border-light);
    }

    .lead {
      font-size: var(--font-size-xl);
      color: var(--color-text-secondary);
      max-width: 700px;
    }

    section {
      padding: var(--space-2xl) 0;
      border-bottom: 1px solid var(--color-border-light);
    }

    section:last-of-type {
      border-bottom: none;
    }

    h2 {
      margin-bottom: var(--space-lg);
      border-bottom: 2px solid var(--color-primary);
      padding-bottom: var(--space-sm);
    }

    .intro {
      font-size: var(--font-size-lg);
      color: var(--color-text-secondary);
      margin-bottom: var(--space-xl);
    }

    .event-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-lg);
    }

    .event-card {
      background: var(--color-bg-surface);
      padding: var(--space-lg);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-md);
      border-left: 4px solid var(--color-primary);
    }

    .event-card h3 {
      margin-top: 0;
      margin-bottom: var(--space-sm);
    }

    .when {
      font-weight: 600;
      color: var(--color-primary);
      margin-bottom: var(--space-xs);
    }

    .where {
      font-style: italic;
      color: var(--color-text-tertiary);
      margin-bottom: var(--space-md);
    }

    .event-card p {
      margin-bottom: var(--space-sm);
      font-size: var(--font-size-sm);
    }

    .market-card {
      background: #ecfdf5;
      border: 2px solid #6ee7b7;
      padding: var(--space-xl);
      border-radius: var(--radius-md);
      max-width: 700px;
    }

    .market-card h3 {
      margin-top: 0;
    }

    .market-card p {
      margin-bottom: var(--space-sm);
    }

    .seasonal-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: var(--space-lg);
    }

    .seasonal-card {
      background: var(--color-bg);
      padding: var(--space-lg);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-md);
    }

    .seasonal-card h3 {
      margin-top: 0;
      padding-bottom: var(--space-sm);
      border-bottom: 1px solid var(--color-border-light);
    }

    .seasonal-card ul {
      list-style: none;
      padding: 0;
      margin: var(--space-md) 0 0 0;
    }

    .seasonal-card li {
      margin-bottom: var(--space-md);
      padding-bottom: var(--space-md);
      border-bottom: 1px solid var(--color-border-light);
    }

    .seasonal-card li:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }

    .org {
      display: block;
      font-size: var(--font-size-sm);
      color: var(--color-text-tertiary);
      font-style: italic;
      margin-top: var(--space-xs);
    }

    .calendar-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: var(--space-lg);
    }

    .calendar-card {
      background: var(--color-bg-surface);
      padding: var(--space-md);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-sm);
    }

    .calendar-card h3 {
      margin-top: 0;
      margin-bottom: var(--space-md);
      font-size: var(--font-size-lg);
    }

    .calendar-card ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .calendar-card li {
      margin-bottom: var(--space-sm);
      font-size: var(--font-size-sm);
    }

    @media (max-width: 768px) {
      .seasonal-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
