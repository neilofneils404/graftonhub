---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import { readFile } from 'fs/promises';
import { join } from 'path';

// Load events data
let eventsData;
try {
  const eventsPath = join(process.cwd(), 'data/events/upcoming.json');
  const eventsJson = await readFile(eventsPath, 'utf-8');
  eventsData = JSON.parse(eventsJson);
} catch (error) {
  eventsData = { events: [] };
}

// Format date helpers
function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { 
    weekday: 'long',
    month: 'long', 
    day: 'numeric',
    year: 'numeric'
  });
}

function formatTime(timeStr: string | null) {
  if (!timeStr) return '';
  const [hours, minutes] = timeStr.split(':');
  const hour = parseInt(hours);
  const ampm = hour >= 12 ? 'PM' : 'AM';
  const displayHour = hour > 12 ? hour - 12 : hour === 0 ? 12 : hour;
  return `${displayHour}:${minutes} ${ampm}`;
}

// Sort events by date
const sortedEvents = eventsData.events
  .sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());
---

<BaseLayout title="Community Events | GraftonHub" description="Upcoming events, meetings, and activities in Grafton, Oberlin, LaGrange and surrounding areas.">
  <div class="page-header">
    <div class="container">
      <h1>üìÖ Community Events</h1>
      <p class="lead">Meetings, activities, and events happening in our communities</p>
    </div>
  </div>

  <section class="events-section">
    <div class="container">
      {sortedEvents.length === 0 ? (
        <div class="card empty-state">
          <p>No upcoming events scheduled. Check back soon!</p>
        </div>
      ) : (
        <div class="events-list">
          {sortedEvents.map(event => (
            <div class="event-card card">
              <div class="event-date-badge">
                <span class="event-day">{new Date(event.date).getDate()}</span>
                <span class="event-month">{new Date(event.date).toLocaleDateString('en-US', { month: 'short' })}</span>
              </div>
              <div class="event-content">
                <h2 class="event-title">{event.title}</h2>
                <div class="event-meta">
                  <span class="event-datetime">
                    {formatDate(event.date)}
                    {event.time && ` at ${formatTime(event.time)}`}
                  </span>
                  {event.location && (
                    <span class="event-location">üìç {event.location}</span>
                  )}
                  {event.community && (
                    <span class="event-community">{event.community}</span>
                  )}
                </div>
                {event.description && (
                  <p class="event-description">{event.description}</p>
                )}
                {event.link && (
                  <a href={event.link} target="_blank" rel="noopener" class="event-link">More info ‚Üí</a>
                )}
              </div>
            </div>
          ))}
        </div>
      )}

      <div class="card submit-event">
        <h3>üìù Submit an Event</h3>
        <p>Have an event you'd like listed? Community events, fundraisers, meetings, and activities are welcome.</p>
        <a href="mailto:neil@neilofneils.com?subject=Event Submission for GraftonHub" class="btn">Submit Event</a>
      </div>
    </div>
  </section>

  <style>
    .page-header {
      background: var(--color-bg-surface);
      padding: var(--space-3xl) 0 var(--space-2xl);
      border-bottom: 1px solid var(--color-border-light);
    }

    .page-header h1 {
      margin-bottom: var(--space-md);
    }

    .lead {
      font-size: var(--font-size-xl);
      color: var(--color-text-secondary);
      max-width: 700px;
    }

    .events-section {
      padding: var(--space-3xl) 0;
    }

    .events-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-lg);
      margin-bottom: var(--space-3xl);
    }

    .event-card {
      display: flex;
      gap: var(--space-xl);
      align-items: flex-start;
    }

    .event-date-badge {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-width: 70px;
      padding: var(--space-md);
      background: var(--color-bg-surface);
      border-radius: var(--border-radius-md);
      text-align: center;
    }

    .event-day {
      font-size: var(--font-size-2xl);
      font-weight: var(--font-weight-bold);
      line-height: 1;
    }

    .event-month {
      font-size: var(--font-size-sm);
      text-transform: uppercase;
      color: var(--color-text-secondary);
    }

    .event-content {
      flex: 1;
    }

    .event-title {
      font-size: var(--font-size-xl);
      margin-bottom: var(--space-sm);
    }

    .event-meta {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-md);
      font-size: var(--font-size-sm);
      color: var(--color-text-secondary);
      margin-bottom: var(--space-md);
    }

    .event-community {
      background: var(--color-bg-surface);
      padding: var(--space-xs) var(--space-sm);
      border-radius: var(--border-radius-sm);
      font-size: var(--font-size-xs);
    }

    .event-description {
      color: var(--color-text-secondary);
      line-height: var(--line-height-relaxed);
    }

    .event-link {
      display: inline-block;
      margin-top: var(--space-md);
      font-weight: var(--font-weight-medium);
    }

    .empty-state {
      text-align: center;
      padding: var(--space-3xl);
      color: var(--color-text-secondary);
    }

    .submit-event {
      text-align: center;
      background: var(--color-bg-surface);
    }

    .submit-event h3 {
      margin-bottom: var(--space-md);
    }

    .submit-event p {
      margin-bottom: var(--space-lg);
      color: var(--color-text-secondary);
    }

    @media (max-width: 600px) {
      .event-card {
        flex-direction: column;
        gap: var(--space-md);
      }

      .event-date-badge {
        flex-direction: row;
        gap: var(--space-sm);
        min-width: auto;
      }
    }
  </style>
</BaseLayout>
