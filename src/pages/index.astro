---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import { readFile } from 'fs/promises';
import { join } from 'path';

// Load events data
let eventsData;
try {
  const eventsPath = join(process.cwd(), 'data/events/upcoming.json');
  const eventsJson = await readFile(eventsPath, 'utf-8');
  eventsData = JSON.parse(eventsJson);
} catch (error) {
  eventsData = { events: [] };
}

// Load active registrations
let registrationsData;
try {
  const regsPath = join(process.cwd(), 'data/sports/active-registrations.json');
  const regsJson = await readFile(regsPath, 'utf-8');
  registrationsData = JSON.parse(regsJson);
} catch (error) {
  registrationsData = { registrations: [] };
}

// Format date helpers
function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { 
    weekday: 'short', 
    month: 'short', 
    day: 'numeric' 
  });
}

function formatTime(timeStr: string | null) {
  if (!timeStr) return '';
  const [hours, minutes] = timeStr.split(':');
  const hour = parseInt(hours);
  const ampm = hour >= 12 ? 'PM' : 'AM';
  const displayHour = hour > 12 ? hour - 12 : hour === 0 ? 12 : hour;
  return `${displayHour}:${minutes} ${ampm}`;
}

// Filter upcoming events (next 2 weeks)
const upcomingEvents = eventsData.events
  .filter(e => new Date(e.date) >= new Date())
  .sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime())
  .slice(0, 5);

// Filter active registrations
const activeRegs = registrationsData.registrations
  .filter(r => r.status === 'open')
  .slice(0, 3);
---

<BaseLayout title="GraftonHub - Local News, Events & Information">
  <!-- Compact Weather Bar with Live Data -->
  <div class="weather-bar">
    <div class="container">
      <div class="weather-compact">
        <span class="weather-temp" id="weather-temp">--°F</span>
        <span class="weather-condition" id="weather-condition">Loading weather...</span>
        <span class="weather-location">Lorain County</span>
      </div>
      <div class="current-date" id="current-date"></div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <section class="content-grid">
    <div class="container">
      <div class="grid">
        <!-- Left Column: News -->
        <div class="news-section">
          <h2 class="section-title">Latest Local News</h2>
          <div id="news-list">
            <p class="loading-state">Loading news...</p>
          </div>
          <p class="news-sources">Sources: Chronicle-Telegram, Cleveland.com, local announcements</p>
        </div>

        <!-- Middle Column: Events & Meetings -->
        <div class="events-section">
          <h2 class="section-title">This Week</h2>
          {upcomingEvents.length === 0 ? (
            <p class="empty-state">No upcoming events scheduled</p>
          ) : (
            <ul class="events-list">
              {upcomingEvents.map(event => (
                <li class="event-item">
                  <div class="event-date">
                    {formatDate(event.date)}
                    {event.time && ` • ${formatTime(event.time)}`}
                  </div>
                  <h3 class="event-title">{event.title}</h3>
                  <div class="event-details">
                    <span class="event-location">{event.location}</span>
                    {event.community && (
                      <span class="event-community">{event.community}</span>
                    )}
                  </div>
                  {event.description && (
                    <p class="event-description">{event.description}</p>
                  )}
                </li>
              ))}
            </ul>
          )}
          <a href="/events" class="view-all-link">View all events →</a>
        </div>

        <!-- Right Column: Active Registrations -->
        <div class="registrations-section">
          <h2 class="section-title">Active Registrations</h2>
          {activeRegs.length === 0 ? (
            <p class="empty-state">No active registrations</p>
          ) : (
            <ul class="registrations-list">
              {activeRegs.map(reg => (
                <li class="registration-item">
                  <h3 class="reg-sport">{reg.sport}</h3>
                  <div class="reg-details">
                    <div>Ages {reg.ages} • {reg.community}</div>
                    <div class="reg-deadline">
                      Deadline: {formatDate(reg.deadline)}
                    </div>
                    <div class="reg-cost">{reg.cost}</div>
                  </div>
                  <a href={reg.link} class="reg-link">Details & Register →</a>
                </li>
              ))}
            </ul>
          )}
          <a href="/sports" class="view-all-link">View all programs →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links Footer Section -->
  <section class="quick-access">
    <div class="container">
      <h2 class="section-title">Quick Access</h2>
      <div class="quick-links">
        <a href="/new-residents" class="quick-link">New to the Area?</a>
        <a href="/new-residents#utilities" class="quick-link">Utility Setup</a>
        <a href="/schools" class="quick-link">School Info</a>
        <a href="/government" class="quick-link">Local Government</a>
        <a href="/services" class="quick-link">Local Services</a>
        <a href="/about" class="quick-link">About This Site</a>
      </div>
    </div>
  </section>

  <script>
    // === LIVE WEATHER ===
    async function fetchWeather() {
      try {
        const response = await fetch('https://api.weather.gov/gridpoints/CLE/61,51/forecast/hourly', {
          headers: {
            'User-Agent': 'GraftonHub Community Site',
            'Accept': 'application/geo+json'
          }
        });
        
        if (!response.ok) throw new Error('Weather fetch failed');
        
        const data = await response.json();
        const current = data.properties.periods[0];
        
        document.getElementById('weather-temp').textContent = `${current.temperature}°${current.temperatureUnit}`;
        document.getElementById('weather-condition').textContent = current.shortForecast;
      } catch (error) {
        console.error('Weather fetch error:', error);
        document.getElementById('weather-condition').textContent = 'Weather unavailable';
      }
    }

    // === CURRENT DATE ===
    function updateDate() {
      const now = new Date();
      const options = { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric',
        timeZone: 'America/New_York'
      };
      document.getElementById('current-date').textContent = now.toLocaleDateString('en-US', options);
    }

    // === NEWS FEED ===
    // Since RSS feeds have CORS restrictions, we'll show curated local news links
    function loadNews() {
      const newsContainer = document.getElementById('news-list');
      
      // Curated local news sources - these are real links that work
      const localNews = [
        {
          title: "Chronicle-Telegram - Lorain County News",
          link: "https://chronicletelegram.com/category/news/lorain-county/",
          source: "Chronicle-Telegram"
        },
        {
          title: "Cleveland.com - Lorain County Section",
          link: "https://www.cleveland.com/lorain-county/",
          source: "Cleveland.com"
        },
        {
          title: "Oberlin News Tribune",
          link: "https://www.chroniclet.com/news/oberlin-news/",
          source: "Chronicle-Telegram"
        },
        {
          title: "Midview Local Schools News",
          link: "https://www.midviewk12.org/page/district-news",
          source: "Midview Schools"
        },
        {
          title: "Lorain County Metro Parks Events",
          link: "https://www.loraincountymetroparks.com/events",
          source: "Metro Parks"
        },
        {
          title: "City of Oberlin Announcements",
          link: "https://www.cityofoberlin.com/category/announcements/",
          source: "City of Oberlin"
        }
      ];

      let html = '<ul class="news-list">';
      localNews.forEach(item => {
        html += `
          <li class="news-item">
            <a href="${item.link}" target="_blank" rel="noopener noreferrer">
              <h3 class="news-title">${item.title}</h3>
            </a>
            <div class="news-meta">
              <span class="news-source">${item.source}</span>
              <span class="news-type">→ Visit site</span>
            </div>
          </li>
        `;
      });
      html += '</ul>';
      
      newsContainer.innerHTML = html;
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', () => {
      updateDate();
      fetchWeather();
      loadNews();
    });

    // Refresh weather every 15 minutes
    setInterval(fetchWeather, 15 * 60 * 1000);
  </script>

  <style>
    /* Weather Bar */
    .weather-bar {
      background: var(--color-bg-alt);
      border-bottom: 1px solid var(--color-border);
      padding: var(--space-sm) 0;
      font-size: var(--font-size-sm);
    }

    .weather-bar .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .weather-compact {
      display: flex;
      gap: var(--space-md);
      align-items: center;
    }

    .weather-temp {
      font-weight: var(--font-weight-semibold);
      font-size: var(--font-size-base);
    }

    .weather-condition {
      color: var(--color-text-secondary);
    }

    .weather-location {
      color: var(--color-text-tertiary);
      font-size: var(--font-size-xs);
    }

    .current-date {
      color: var(--color-text-secondary);
      font-size: var(--font-size-xs);
    }

    /* Main Content Grid */
    .content-grid {
      padding: var(--space-2xl) 0;
    }

    .grid {
      display: grid;
      grid-template-columns: 2fr 1.5fr 1fr;
      gap: var(--space-2xl);
    }

    .section-title {
      font-size: var(--font-size-lg);
      font-weight: var(--font-weight-bold);
      margin-bottom: var(--space-lg);
      padding-bottom: var(--space-sm);
      border-bottom: 2px solid var(--color-border);
    }

    /* News Section */
    .news-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .news-item {
      padding: var(--space-md) 0;
      border-bottom: 1px solid var(--color-border-light);
    }

    .news-item:last-child {
      border-bottom: none;
    }

    .news-title {
      font-size: var(--font-size-base);
      font-weight: var(--font-weight-semibold);
      line-height: var(--line-height-normal);
      margin-bottom: var(--space-xs);
    }

    .news-title:hover {
      color: var(--color-link-hover);
    }

    .news-meta {
      display: flex;
      gap: var(--space-md);
      font-size: var(--font-size-xs);
      color: var(--color-text-tertiary);
    }

    .news-source {
      font-weight: var(--font-weight-medium);
    }

    .news-sources {
      font-size: var(--font-size-xs);
      color: var(--color-text-tertiary);
      margin-top: var(--space-md);
      font-style: italic;
    }

    .loading-state {
      color: var(--color-text-tertiary);
      font-style: italic;
      padding: var(--space-lg) 0;
    }

    /* Events Section */
    .events-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .event-item {
      padding: var(--space-md) 0;
      border-bottom: 1px solid var(--color-border-light);
    }

    .event-item:last-child {
      border-bottom: none;
    }

    .event-date {
      font-size: var(--font-size-xs);
      font-weight: var(--font-weight-semibold);
      color: var(--color-text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: var(--space-xs);
    }

    .event-title {
      font-size: var(--font-size-base);
      font-weight: var(--font-weight-semibold);
      margin-bottom: var(--space-xs);
    }

    .event-details {
      font-size: var(--font-size-sm);
      color: var(--color-text-secondary);
      margin-bottom: var(--space-xs);
    }

    .event-community {
      font-size: var(--font-size-xs);
      color: var(--color-text-tertiary);
      margin-left: var(--space-sm);
    }

    .event-description {
      font-size: var(--font-size-sm);
      color: var(--color-text-secondary);
      line-height: var(--line-height-normal);
      margin: 0;
    }

    /* Registrations Section */
    .registrations-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .registration-item {
      padding: var(--space-md);
      border: 1px solid var(--color-border);
      border-radius: var(--border-radius-md);
      margin-bottom: var(--space-md);
    }

    .reg-sport {
      font-size: var(--font-size-base);
      font-weight: var(--font-weight-bold);
      margin-bottom: var(--space-sm);
    }

    .reg-details {
      font-size: var(--font-size-sm);
      color: var(--color-text-secondary);
      margin-bottom: var(--space-sm);
    }

    .reg-details > div {
      margin: var(--space-xs) 0;
    }

    .reg-deadline {
      font-weight: var(--font-weight-semibold);
      color: var(--color-text);
    }

    .reg-link {
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-medium);
    }

    .view-all-link {
      display: inline-block;
      margin-top: var(--space-md);
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-medium);
    }

    /* Quick Access */
    .quick-access {
      background: var(--color-bg-alt);
      padding: var(--space-2xl) 0;
      margin-top: var(--space-3xl);
    }

    .quick-links {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-md);
    }

    .quick-link {
      padding: var(--space-sm) var(--space-md);
      border: 1px solid var(--color-border);
      border-radius: var(--border-radius-md);
      background: white;
      font-size: var(--font-size-sm);
      transition: all 0.2s ease;
    }

    .quick-link:hover {
      border-color: var(--color-text);
      text-decoration: none;
    }

    .empty-state {
      color: var(--color-text-tertiary);
      font-style: italic;
      padding: var(--space-lg) 0;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .grid {
        grid-template-columns: 1fr 1fr;
      }

      .registrations-section {
        grid-column: 1 / -1;
      }

      .registrations-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--space-md);
      }
    }

    @media (max-width: 768px) {
      .grid {
        grid-template-columns: 1fr;
      }

      .weather-bar .container {
        flex-direction: column;
        gap: var(--space-sm);
        align-items: flex-start;
      }

      .quick-links {
        flex-direction: column;
      }

      .quick-link {
        display: block;
      }
    }
  </style>
</BaseLayout>
