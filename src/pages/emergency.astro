  <style>
    .page-header.emergency {
      background: #1a1a1a;
      color: white;
      padding: var(--space-3xl) 0 var(--space-2xl);
    }

    .page-header.emergency h1 {
      margin-bottom: var(--space-lg);
    }

    .emergency-banner {
      background: #dc2626;
      color: white;
      display: inline-flex;
      align-items: center;
      gap: var(--space-md);
      padding: var(--space-md) var(--space-xl);
      border-radius: var(--radius-md);
      font-size: var(--font-size-xl);
      margin-bottom: var(--space-lg);
    }

    .emergency-banner .dial {
      font-weight: 800;
      font-size: var(--font-size-2xl);
    }

    .page-header.emergency .lead {
      color: rgba(255,255,255,0.8);
    }

    .localities, .hospitals, .utilities-emergency {
      padding: var(--space-2xl) 0;
    }

    .localities {
      background: var(--color-bg-surface);
    }

    .locality-card {
      background: var(--color-bg);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-md);
      padding: var(--space-xl);
      margin-bottom: var(--space-xl);
    }

    .locality-card.county {
      background: #f0f9ff;
      border-color: #bae6fd;
    }

    .locality-card h2 {
      margin-bottom: var(--space-lg);
      padding-bottom: var(--space-md);
      border-bottom: 1px solid var(--color-border-light);
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-xl);
    }

    .services-grid.three-col {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .service h3 {
      margin-bottom: var(--space-sm);
    }

    .service .provider {
      font-weight: 600;
      margin-bottom: var(--space-xs);
    }

    .service .note {
      font-size: var(--font-size-sm);
      color: var(--color-text-tertiary);
      margin-bottom: var(--space-sm);
    }

    .phone {
      font-size: var(--font-size-lg);
      font-weight: 600;
    }

    .phone.urgent {
      color: #dc2626;
    }

    .service ul {
      font-size: var(--font-size-sm);
      margin-top: var(--space-sm);
      padding-left: var(--space-lg);
    }

    .hospitals h2, .utilities-emergency h2 {
      margin-bottom: var(--space-xl);
    }

    .hospital-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-xl);
    }

    .hospital-card, .utility-card {
      background: var(--color-bg-surface);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-md);
      padding: var(--space-lg);
    }

    .hospital-card h3, .utility-card h3 {
      margin-bottom: var(--space-md);
    }

    .hospital-card p, .utility-card p {
      margin-bottom: var(--space-xs);
    }

    .utility-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-xl);
    }

    .warning {
      background: #fef3c7;
      color: #92400e;
      padding: var(--space-sm) var(--space-md);
      border-radius: var(--radius-sm);
      font-size: var(--font-size-sm);
      margin-top: var(--space-sm);
    }

    @media (prefers-color-scheme: dark) {
      .locality-card.county {
        background: rgba(59, 130, 246, 0.15);
        border-color: rgba(186, 230, 253, 0.3);
      }

      .warning {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
      }
    }

    @media (max-width: 600px) {
      .services-grid {
        grid-template-columns: 1fr;
      }

      .emergency-banner {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
</BaseLayout>
