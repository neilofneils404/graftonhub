---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout title="Youth Sports | GraftonHub" description="Youth sports programs, registration info, and contacts for baseball, soccer, football, basketball, and more in Grafton, LaGrange, and Oberlin areas.">
  <div class="page-header">
    <div class="container">
      <h1>‚öΩ Youth Sports</h1>
      <p class="lead">Find programs, registration info, and contacts for youth sports in our area</p>
