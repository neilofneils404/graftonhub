---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const pageTitle = "Youth Sports & Recreation";
const pageDescription = "Youth sports leagues, recreation programs, and activities serving Grafton (Village & Township), LaGrange (Village & Township), Oberlin, Carlisle Township, and Eaton Township.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="page-header">
    <div class="container">
      <h1>âš½ {pageTitle}</h1>
      <p class="lead">Youth sports leagues and recreation programs serving southern Lorain County</p>
    </div>
  </div>

  <div class="container"

    <!-- Baseball & Softball -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4 border-b-2 border-blue-600 pb-2">
        Baseball & Softball
      </h2>

      <div class="space-y-6">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Grafton Midview Hot Stove</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Grafton, Eaton Township</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> Youth baseball & softball (t-ball through high school)</li>
            <li><strong>Website:</strong> <a href="https://www.graftonhotstove.org/" class="text-blue-600 hover:underline">graftonhotstove.org</a></li>
            <li><strong>Contact:</strong> Graftonmidviewhotstove@gmail.com</li>
            <li><strong>Location:</strong> Local fields (calendar on site for closures/practices)</li>
            <li class="text-sm text-gray-600"><em>Note: Ages and divisions vary - check website for current registration details</em></li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Oberlin Baseball Softball Federation (OBSF)</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Oberlin</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> 5-18 (baseball & softball)</li>
            <li><strong>Website:</strong> <a href="https://sites.google.com/view/obsf/home" class="text-blue-600 hover:underline">sites.google.com/view/obsf</a></li>
            <li><strong>Baseball Contact:</strong> Jodi Cool, 440-864-1817</li>
            <li><strong>Softball Contact:</strong> Anthony Gallam, 440-452-5011</li>
            <li><strong>Email:</strong> oberlinbaseballsoftball@gmail.com</li>
            <li><strong>Location:</strong> Oberlin Recreation Complex (5 lighted fields)</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Lorain County Hot Stove League</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: County-wide (travel/competitive)</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Type:</strong> Travel and competitive play</li>
            <li><strong>Website:</strong> <a href="https://www.loraincountyhotstove.com/" class="text-blue-600 hover:underline">loraincountyhotstove.com</a></li>
            <li><strong>Note:</strong> Teams from Keystone, Midview, and other area schools participate</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Elyria Recreation / Little League</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Elyria / Lorain County (regional)</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> 4+ (t-ball starting at age 4, youth baseball & softball programs)</li>
            <li><strong>Location:</strong> Elyria area facilities</li>
            <li class="text-sm text-gray-600"><em>Note: Contact Elyria Parks & Recreation for current program details and registration</em></li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Soccer -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4 border-b-2 border-blue-600 pb-2">
        Soccer
      </h2>

      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
        <p class="text-gray-700">
          <strong>All local soccer programs participate in the Lorain County Soccer League (LCSL)</strong> - 
          a recreational league for ages U7-U15. Teams play against each other within the county.
        </p>
        <p class="text-sm text-gray-600 mt-2">
          LCSL Website: <a href="https://www.quickscores.com/loraincountysoccer" class="text-blue-600 hover:underline">quickscores.com/loraincountysoccer</a>
        </p>
      </div>

      <div class="space-y-6">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Midview Soccer League</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Grafton, Carlisle Township, Eaton Township</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> U7-U15 (recreational), Bumblebee U3-U6 (introductory)</li>
            <li><strong>Website:</strong> <a href="https://www.midviewsoccer.com/" class="text-blue-600 hover:underline">midviewsoccer.com</a></li>
            <li><strong>President:</strong> Scott Ulrich, 440-714-1407, mslpresident@yahoo.com</li>
            <li><strong>Registrar:</strong> midviewsoccerregistrar@gmail.com</li>
            <li><strong>Fields:</strong> Midview Complex (16218 Chamberlain Rd), West Grass (13080 Durkee Rd), Ross Stadium (38199 Capel Rd)</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">LaGrange Youth Soccer Association (LYSA)</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: LaGrange, Carlisle Township</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> U7-U15 (LCSL recreational), U4-U6 (in-house PeeWee/WildTots)</li>
            <li><strong>Cost:</strong> $80 U7-U15, $50 in-house (uniforms separate, 2-year cycle)</li>
            <li><strong>Website:</strong> <a href="https://www.lagrangeyouthsoccer.com/" class="text-blue-600 hover:underline">lagrangeyouthsoccer.com</a></li>
            <li><strong>Contact:</strong> lysaboard@gmail.com, President Christine Schwartz</li>
            <li><strong>Location:</strong> Lagrange Community Park (Fields 1-5)</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Oberlin Youth Soccer Association (OYSA)</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Oberlin</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> U7-U15 (6-14 years), recreational & competitive</li>
            <li><strong>Seasons:</strong> Spring (April-June), Fall (August-October)</li>
            <li><strong>Cost:</strong> U7-U8 $90 annual/$55 seasonal; U9-U15 $110 annual/$65 seasonal (+ $45 uniform)</li>
            <li><strong>Website:</strong> <a href="https://www.oberlinsoccer.org/" class="text-blue-600 hover:underline">oberlinsoccer.org</a></li>
            <li><strong>Contact:</strong> oberlinyouthsoccer@gmail.com, President Nevin Irvin</li>
            <li><strong>Location:</strong> Oberlin Pavilion fields (OB1-8)</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Football & Cheer -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4 border-b-2 border-blue-600 pb-2">
        Football & Cheer
      </h2>

      <div class="space-y-6">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">JR LC8 Football League</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Lorain County (all areas)</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Divisions:</strong> Flag, Padded Flag, Rookie Tackle, Full Contact Varsity</li>
            <li><strong>Facebook:</strong> <a href="https://www.facebook.com/JrLC8/" class="text-blue-600 hover:underline">facebook.com/JrLC8</a></li>
            <li><strong>Note:</strong> Teams affiliated with local schools (Midview, Keystone, Oberlin)</li>
            <li><strong>Registration:</strong> Typically opens in spring; check Facebook for updates</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Flag Football Fanatics</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: West Cleveland/Lorain area</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> 4-14 (PreK/K, 1st-2nd, 3rd-4th divisions)</li>
            <li><strong>Website:</strong> <a href="https://playfanatics.com/" class="text-blue-600 hover:underline">playfanatics.com</a></li>
            <li><strong>Type:</strong> Flag football for younger ages</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Basketball -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4 border-b-2 border-blue-600 pb-2">
        Basketball
      </h2>

      <div class="space-y-6">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Keystone Youth Sports Basketball</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: LaGrange, Carlisle Township</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> K-6th grade</li>
            <li><strong>Cost:</strong> K/1st $15, 2nd/3rd $30</li>
            <li><strong>Website:</strong> <a href="https://keystoneyouthsports.com/basketball/" class="text-blue-600 hover:underline">keystoneyouthsports.com/basketball</a></li>
            <li><strong>Contact:</strong> keystoneyouthbasketball@gmail.com, Jeff Holzhauer (jeffrey.holzhauer@keystoneschools.org)</li>
            <li><strong>Location:</strong> Keystone Middle School (501 Opportunity Way), games Saturdays</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Midview Youth Basketball</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Grafton, Eaton Township</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> Youth (likely K-8 feeder program)</li>
            <li><strong>Interest Form:</strong> <a href="https://forms.gle/8qRgNnG8Nc2Esqp89" class="text-blue-600 hover:underline">Sign up here</a></li>
            <li><strong>Website:</strong> <a href="https://www.midviewathletics.com/youth-sports/youth-sports-programs" class="text-blue-600 hover:underline">midviewathletics.com/youth-sports</a></li>
            <li><strong>Contact:</strong> dmay@midviewk12.org, Shawn Bristow (sbristow@midviewk12.org)</li>
            <li><strong>Location:</strong> Midview schools (38199 Capel Rd, Grafton)</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Oberlin Parks & Recreation Youth Basketball</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Oberlin</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> K-2nd grade (beginner/recreational)</li>
            <li><strong>Cost:</strong> $30 resident, $40 non-resident</li>
            <li><strong>Website:</strong> <a href="https://cityofoberlin.com/city-government/departments/recreation/youth-recreation/youth-basketball/" class="text-blue-600 hover:underline">City of Oberlin Recreation</a></li>
            <li><strong>Location:</strong> Oberlin Enrichment & Activity Center (OEAC), Rec Complex</li>
            <li><strong>Registration:</strong> Check website for seasonal registration dates</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">French Creek YMCA</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Lorain County (regional)</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> 3-4+ (Tiny Tykes intro program), youth leagues up to age 15</li>
            <li><strong>Programs:</strong> Jr. Cavs "Tiny Tykes" basketball (ages 3-4), youth basketball leagues</li>
            <li><strong>Phone:</strong> <a href="tel:440-934-9622" class="text-blue-600 hover:underline">(440) 934-9622</a></li>
            <li><strong>Location:</strong> 36363 Detroit Rd, Avon, OH 44011</li>
            <li><strong>Services:</strong> Indoor pool, youth aquatics, childcare available</li>
            <li class="text-sm text-gray-600"><em>Note: YMCA membership may be required for some programs</em></li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Hooptech</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: North Ridgeville / Lorain County</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> Youth programs (contact for specific age ranges)</li>
            <li><strong>Programs:</strong> "Little & Young Hoopers" beginner programs, high-tech training</li>
            <li><strong>Phone:</strong> <a href="tel:440-499-7808" class="text-blue-600 hover:underline">(440) 499-7808</a></li>
            <li><strong>Location:</strong> 7717 Victory Lane, North Ridgeville, OH 44039</li>
            <li><strong>Website:</strong> <a href="https://playfanatics.com/" class="text-blue-600 hover:underline">playfanatics.com</a></li>
            <li><strong>Features:</strong> Shoot 360 technology, advanced training facility</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">JBC at Grafton Health & Fitness Center</h3>
          <p class="text-sm text-gray-600 mb-3">Serving: Grafton area</p>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Ages:</strong> Youth programs (contact facility for details)</li>
            <li><strong>Location:</strong> 416 Main St, Grafton, OH 44044 (Grafton Health, Fitness & Events Center)</li>
            <li><strong>Facilities:</strong> Basketball courts available</li>
            <li class="text-sm text-gray-600"><em>Note: Contact the fitness center directly for current youth basketball program information</em></li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Other Activities -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4 border-b-2 border-blue-600 pb-2">
        Other Sports & Activities
      </h2>

      <div class="space-y-6">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Swimming</h3>
          <ul class="space-y-3 text-gray-700">
            <li>
              <strong>Splash Zone (Lorain County Metro Parks)</strong><br>
              <span class="text-sm">8-lane indoor competition pool, swim teams, lessons, open swim</span><br>
              <span class="text-sm text-gray-600">Location: Oberlin | Phone: 440-774-5059</span>
            </li>
            <li>
              <strong>French Creek Family YMCA</strong><br>
              <span class="text-sm">Indoor pool, youth aquatics, childcare</span><br>
              <span class="text-sm text-gray-600">Location: Avon | Phone: 440-934-9622</span>
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Wrestling</h3>
          <ul class="space-y-2 text-gray-700">
            <li>
              <strong>Keystone Youth Wrestling</strong><br>
              <span class="text-sm text-gray-600">580 Opportunity Way, LaGrange | Youth programs and tournaments</span>
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Martial Arts</h3>
          <ul class="space-y-3 text-gray-700">
            <li>
              <strong>Neutral Ground Grafton Martial Arts</strong><br>
              <span class="text-sm">Juniors program for kids</span><br>
              <span class="text-sm text-gray-600">
                <a href="https://graftonmartialarts.com/program/juniors-martial-arts/" class="text-blue-600 hover:underline">graftonmartialarts.com</a>
              </span>
            </li>
            <li>
              <strong>Vanyo Martial Arts</strong><br>
              <span class="text-sm text-gray-600">Kids classes available</span>
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Dance</h3>
          <ul class="space-y-2 text-gray-700">
            <li>
              <strong>MovementWorks Dance & Fitness</strong><br>
              <span class="text-sm">Hip-hop, jazz, ballet, acro, tap, tumbling, cheer, yoga, preschool classes</span><br>
              <span class="text-sm text-gray-600">Ages 6 months+ | Oberlin</span><br>
              <span class="text-sm text-gray-600">
                <a href="https://www.movementworksdance.com/" class="text-blue-600 hover:underline">movementworksdance.com</a>
              </span>
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Tennis & Golf</h3>
          <ul class="space-y-3 text-gray-700">
            <li>
              <strong>Tennis:</strong> Grafton Parks & Recreation offers seasonal youth tennis camps
            </li>
            <li>
              <strong>Golf Courses:</strong> Forest Hills GC, Kopf Family GC (Cherry Ridge), Pheasant Run GC, Oberlin GC
              <br><span class="text-sm text-gray-600">Check individual courses for junior programs</span>
            </li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Registration Tips -->
    <section class="registration-tips">
      <div class="card">
        <h2>Registration Tips</h2>
        <ul>
          <li><strong>Spring sports</strong> (baseball, soccer) typically register January-March</li>
          <li><strong>Fall sports</strong> (football, soccer) typically register May-July</li>
          <li><strong>Winter sports</strong> (basketball, wrestling) typically register September-November</li>
          <li>Check organization websites or Facebook pages for current registration dates</li>
          <li>Many programs offer multi-child discounts</li>
          <li>Scholarships may be available - contact the organization directly</li>
        </ul>
      </div>
    </section>

  </div>

  <style>
    .page-header {
      background: var(--color-bg-surface);
      padding: var(--space-3xl) 0 var(--space-2xl);
      border-bottom: 1px solid var(--color-border-light);
    }

    .lead {
      font-size: var(--font-size-xl);
      color: var(--color-text-secondary);
      max-width: 700px;
    }

    .container > section {
      padding: var(--space-2xl) 0;
    }

    .container > section:first-of-type {
      padding-top: var(--space-xl);
    }

    h2 {
      margin-bottom: var(--space-lg);
      border-bottom: 2px solid var(--color-primary);
      padding-bottom: var(--space-sm);
    }

    .bg-blue-50 {
      background: #eff6ff;
      border: 1px solid #60a5fa;
      padding: var(--space-lg);
      border-radius: var(--radius-md);
    }

    @media (prefers-color-scheme: dark) {
      .bg-blue-50 {
        background: rgba(59, 130, 246, 0.15);
        border-color: rgba(96, 165, 250, 0.5);
      }
    }

    .registration-tips {
      padding: var(--space-xl) 0 var(--space-2xl);
      background: var(--color-bg-surface);
    }

    .registration-tips .card {
      background: var(--color-bg);
      padding: var(--space-lg);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-md);
    }

    .registration-tips ul {
      margin-left: var(--space-lg);
      list-style: disc;
    }

    .registration-tips li {
      margin-bottom: var(--space-sm);
    }

    .space-y-6 > *:not(:last-child) {
      margin-bottom: var(--space-xl);
    }

    .bg-white {
      background: var(--color-bg);
      border: 1px solid var(--color-border-light);
      border-radius: var(--radius-md);
      padding: var(--space-lg);
    }

    .text-xl {
      font-size: var(--font-size-xl);
    }

    .text-2xl {
      font-size: 1.5rem;
    }

    .font-semibold {
      font-weight: 600;
    }

    ul.space-y-2 {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    ul.space-y-2 li {
      margin-bottom: var(--space-sm);
    }

    ul.space-y-3 li {
      margin-bottom: var(--space-md);
    }

    .text-sm {
      font-size: var(--font-size-sm);
    }

    .text-gray-600 {
      color: var(--color-text-secondary);
    }

    .text-gray-700 {
      color: var(--color-text);
    }

    @media (max-width: 768px) {
      .container {
        padding: 0 var(--space-md);
      }
    }
  </style>
</BaseLayout>
