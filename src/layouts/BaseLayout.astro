---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Your local community hub for Grafton, Oberlin, LaGrange, Carlisle Township, and Eaton Township. Find news, events, sports, schools, and services." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | GraftonHub</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <header class="site-header">
    <nav class="container">
      <div class="nav-content">
        <a href="/" class="logo">
          <img src="/logo.svg" alt="GraftonHub logo" class="logo-mark" />
          <span class="logo-text">Grafton<span class="hub">Hub</span></span>
        </a>
        <div class="nav-links">
          <a href="/government">Government</a>
          <a href="/schools">Schools</a>
          <a href="/utilities">Utilities</a>
          <a href="/emergency">Emergency</a>
          <a href="/sports">Sports</a>
          <a href="/about">About</a>
          <button id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode">
            <span class="theme-icon">üåô</span>
          </button>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h4>Grafton<span class="hub-highlight">Hub</span></h4>
          <p>Your community hub for Grafton and surrounding areas.</p>
        </div>
        <div class="footer-section">
          <h4>Communities</h4>
          <ul>
            <li>Grafton (Village & Township), OH</li>
            <li>LaGrange (Village & Township), OH</li>
            <li>Carlisle Township, OH</li>
            <li>Eaton Township, OH</li>
            <li>Oberlin, OH</li>
          </ul>
          <p style="font-size: 0.85rem; margin-top: 0.5rem; opacity: 0.8;">Lorain County, Ohio</p>
        </div>
        <div class="footer-section">
          <h4>Quick Links</h4>
          <ul>
            <li><a href="/government">Local Government</a></li>
            <li><a href="/emergency">Emergency Services</a></li>
            <li><a href="/utilities">Utility Setup</a></li>
            <li><a href="/schools">Schools & Libraries</a></li>
            <li><a href="/sports">Youth Sports</a></li>
            <li><a href="/new-residents">New Residents Guide</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h4>About</h4>
          <p>A community resource for our area. No ads, no tracking‚Äîjust helpful local information.</p>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2026 GraftonHub ‚Ä¢ Made with ‚ù§Ô∏è for our community</p>
        <p class="footer-links">
          <a href="/about">About</a> ‚Ä¢ 
          <a href="mailto:neil@neilofneils.com">Report an Error</a> ‚Ä¢ 
          <a href="/about#privacy">Privacy</a> ‚Ä¢ 
          <a href="/nancys" class="coffee-link" title="Since 1984">‚òï</a>
        </p>
        <p class="update-time">Last build: {new Date().toLocaleString('en-US', { timeZone: 'America/New_York', dateStyle: 'medium', timeStyle: 'short' })}</p>
      </div>
    </div>
  </footer>

  <script>
    // Dark mode toggle
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    const themeIcon = themeToggle?.querySelector('.theme-icon');
    
    // Check for saved theme preference or default to system preference
    const getTheme = () => {
      const saved = localStorage.getItem('theme');
      if (saved) return saved;
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    };
    
    const setTheme = (theme) => {
      html.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
      if (themeIcon) {
        themeIcon.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
      }
    };
    
    // Initialize theme
    setTheme(getTheme());
    
    // Toggle on click
    themeToggle?.addEventListener('click', () => {
      const current = html.getAttribute('data-theme');
      setTheme(current === 'dark' ? 'light' : 'dark');
    });
    
    // Listen for system theme changes
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (!localStorage.getItem('theme')) {
        setTheme(e.matches ? 'dark' : 'light');
      }
    });
  </script>

  <style>
    /* Dark mode colors */
    [data-theme="dark"] {
      --color-bg: #1a1a1a;
      --color-bg-surface: #242424;
      --color-bg-alt: #2d2d2d;
      --color-text: #e5e5e5;
      --color-text-secondary: #a3a3a3;
      --color-text-tertiary: #737373;
      --color-border: #404040;
      --color-border-light: #333333;
      --color-link: #60a5fa;
      --color-link-hover: #93c5fd;
      --color-primary: #2563eb;
    }

    [data-theme="dark"] .site-header {
      background: var(--color-bg) !important;
    }

    [data-theme="dark"] .quick-links {
      background: var(--color-bg) !important;
    }

    .hub-highlight {
      color: #2563eb;
    }

    [data-theme="dark"] .hub-highlight {
      color: #60a5fa;
    }

    .theme-toggle {
      background: none;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      padding: 0.4rem 0.6rem;
      cursor: pointer;
      font-size: 1.2rem;
      line-height: 1;
      transition: all 0.2s ease;
      margin-left: var(--space-sm);
    }

    .theme-toggle:hover {
      background: var(--color-bg-surface);
      transform: scale(1.1);
    }

    .site-header {
      background: var(--color-bg);
      border-bottom: 1px solid var(--color-border);
      padding: var(--space-md) 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      background: white;
    }

    .nav-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 0.125rem;
      font-size: var(--font-size-xl);
      font-weight: var(--font-weight-bold);
      color: var(--color-text);
      text-decoration: none;
    }

    .logo:hover {
      text-decoration: none;
    }

    .logo-mark {
      width: 32px;
      height: 32px;
      flex-shrink: 0;
    }

    .hub {
      color: #2563eb;
      font-weight: var(--font-weight-bold);
    }

    .logo:hover .hub {
      color: #1d4ed8;
    }

    .logo-icon {
      font-size: 1.5rem;
    }

    .nav-links {
      display: flex;
      gap: var(--space-lg);
    }

    .nav-links a {
      color: var(--color-text-secondary);
      font-weight: var(--font-weight-normal);
      font-size: var(--font-size-sm);
    }

    .nav-links a:hover {
      color: var(--color-text);
      text-decoration: underline;
    }

    .site-footer {
      background: var(--color-bg-alt);
      border-top: 1px solid var(--color-border);
      padding: var(--space-2xl) 0 var(--space-lg);
      margin-top: var(--space-3xl);
    }

    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-xl);
      margin-bottom: var(--space-xl);
    }

    .footer-section h4 {
      color: var(--color-text);
      font-size: var(--font-size-base);
      margin-bottom: var(--space-md);
      font-weight: var(--font-weight-semibold);
    }

    .footer-section p {
      color: var(--color-text-secondary);
      font-size: var(--font-size-sm);
      line-height: var(--line-height-relaxed);
    }

    .footer-section ul {
      list-style: none;
      padding: 0;
    }

    .footer-section ul li {
      color: var(--color-text-secondary);
      font-size: var(--font-size-sm);
      margin-bottom: var(--space-sm);
    }

    .footer-section a {
      color: var(--color-link);
    }

    .footer-section a:hover {
      color: var(--color-link-hover);
    }

    .footer-bottom {
      text-align: center;
      padding-top: var(--space-lg);
      border-top: 1px solid var(--color-border);
      color: var(--color-text-secondary);
      font-size: var(--font-size-sm);
    }

    .footer-links {
      margin-top: var(--space-sm);
      font-size: var(--font-size-sm);
    }

    .footer-links a {
      color: var(--color-link);
      text-decoration: none;
    }

    .footer-links a:hover {
      text-decoration: underline;
    }

    .coffee-link {
      font-size: 1.1em;
      transition: transform 0.2s ease;
      display: inline-block;
      text-decoration: none !important;
    }

    .coffee-link:hover {
      transform: scale(1.3) rotate(15deg);
    }

    .update-time {
      margin-top: var(--space-sm);
      opacity: 0.7;
      font-size: var(--font-size-xs);
    }

    @media (max-width: 768px) {
      .nav-links {
        display: none;
      }
      
      .footer-content {
        grid-template-columns: 1fr;
      }
    }
  </style>
</body>
</html>
